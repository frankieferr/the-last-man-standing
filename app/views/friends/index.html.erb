<div data-widget="friends_manager">
  <div data-widget="friends_add">
    <div class="form">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Add Friend
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-10">
              <input type="text" class="full_width" data-input="username"/>
            </div>
            <div class="col-md-2">
              <button class="btn btn-primary" data-button="add">Add</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div data-widget="friends_list">
    <div class="form">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Friends
        </div>
        <div class="panel-body">
          <div data-widget="table" id="friends"></div>

        </div>
      </div>
    </div>
  </div>

  <div data-widget="friends_requests">
    <div class="form">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Requests
        </div>
        <div class="panel-body">
          <h1>Received Requests</h1>
          <div data-widget="table" id="received_requests"></div>
          <h1>Sent Requests</h1>
          <div data-widget="table" id="sent_requests"></div>
        </div>
      </div>
    </div>
  </div>
</div>


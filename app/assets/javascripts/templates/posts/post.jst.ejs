<div data-post-id="{{=post.id}}" style="width:100%; margin-bottom: 5px;">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <div class="row">
        <div align="left" class="col-xs-6">
          <i class='fa fa-user'></i>&nbsp;<b>{{=post.man_username}}</b>
        </div>
        <div align="right" class="col-xs-6">
          {{=post.date_time}}
        </div>
      </div>
    </div>
    <div class="panel-body">
      {{=post.message}}
      <div align="right" data-area="comments_link">
        <a data-shown="false"><i>Show Comments</i>&nbsp;<i>(</i><i class="comment_count">{{=post.comments.length}}</i><i>)</i></a>
      </div>
      <div class="comments">
        <div data-area="persistedComments"></div>
        <div data-area="newComment">
          <div class="row">
            <div align="left" class="col-xs-2">
              <i class='fa fa-user'></i> &nbsp <b> {{=current_man}} </b> <br>
            </div>
            <div align="left" class="col-xs-7">
              <textarea style="width:100%; min-height:40px" placeholder="Comment on this post"></textarea>
            </div>
            <div class="col-md-3">
              <button class="btn btn-sm btn-primary" data-button="add_comment" data-post-id="{{=post.id}}">Add Comment</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>